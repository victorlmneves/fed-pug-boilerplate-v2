mixin link(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''
  - spec.text = spec.text || 'Default Link'

  a.link(class=spec.__class)&attributes(attributes)
    if block
      block
    else
      != spec.text

mixin menuLink(text, css, link)
  a(class=css href=link)
    | #{text}

mixin linkWithImage(name, css, link, image)
  a(class=css href=link)
    image(src=`images/${image}` alt=name)
